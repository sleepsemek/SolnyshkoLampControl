<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.LampControl" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorOnSecondary">@color/main_blue</item>
        <item name="colorPrimaryVariant">@color/main_blue</item>
        <item name="colorOnPrimary">@color/light_grey</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dark_blue</item>
        <item name="colorSecondaryVariant">@color/main_blue</item>
        <item name="colorPrimary">@color/black</item>

        <item name="colorContainer">@color/white</item>
        <item name="colorAccent">@color/main_blue</item>

        <item name="android:textColorPrimary">@color/dark_blue</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/light_grey</item>
        <!-- Customize your theme here. -->
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:actionMenuTextColor">@color/white</item>
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>

    </style>

    <style name="PopupMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:itemBackground">@color/white</item>
    </style>

</resources>