<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LampControl" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorOnSecondary">@color/dark_blue</item>
        <item name="colorPrimaryVariant">@color/main_red</item>
        <item name="colorOnPrimary">@color/night_grey</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/main_blue</item>
        <item name="colorSecondaryVariant">@color/night_grey</item>
        <item name="colorSecondaryContainer">@color/darker_grey</item>
        <item name="colorPrimary">@color/main_blue</item>

        <item name="colorContainer">@color/night_white</item>
        <item name="colorAccent">@color/dark_blue</item>

        <item name="android:textColorPrimary">@color/main_blue</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/night_grey</item>
        <!-- Customize your theme here. -->
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:actionMenuTextColor">@color/main_blue</item>
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
        <item name="bottomSheetDialogTheme">@style/DialogStyle</item>

    </style>

    <style name="PopupMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="android:textColor">@color/main_blue</item>
        <item name="android:itemBackground">@color/night_grey</item>
    </style>

    <style name="DialogStyle" parent="Theme.MaterialComponents.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
        <item name="colorSecondary">@color/main_blue</item>
        <item name="colorPrimary">@color/white</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="android:textColorPrimary">@color/main_blue</item>
    </style>

    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_corners</item>
    </style>

</resources>