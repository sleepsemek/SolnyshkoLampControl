<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginVertical="5dp"
        android:layout_marginHorizontal="15dp"
        android:orientation="horizontal"
        android:gravity="center|start"
        android:paddingHorizontal="15dp"
        android:background="@drawable/background_elements">

        <TextView
            android:id="@+id/addedName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/dark_blue"
            android:textSize="20dp"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/edit"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_weight="0"
            android:background="@drawable/btn_background_grey"
            android:foregroundGravity="center"
            android:backgroundTint="@color/light_grey"
            android:foreground="@drawable/ic_baseline_edit_24"
            android:foregroundTint="@color/main_red"
            app:cornerRadius="20dp" />

    </LinearLayout>
</androidx.appcompat.widget.LinearLayoutCompat>