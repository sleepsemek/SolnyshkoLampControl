<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginVertical="5dp"
        android:layout_marginHorizontal="15dp"
        android:orientation="horizontal"
        android:gravity="center|start"
        android:paddingHorizontal="15dp"
        android:background="@drawable/background_elements">

        <TextView
            android:id="@+id/addedName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="?attr/colorSecondary"
            android:textSize="18dp"
            android:layout_weight="1" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/rename_device"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_weight="0"
            android:background="@drawable/btn_background_grey"
            android:foregroundGravity="center"
            android:backgroundTint="?attr/colorOnPrimary"
            android:foreground="@drawable/ic_baseline_edit_24"
            android:foregroundTint="@color/main_blue"
            app:cornerRadius="20dp"
            android:layout_marginHorizontal="5dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/delete_device"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_weight="0"
            android:background="@drawable/btn_background_grey"
            android:foregroundGravity="center"
            android:backgroundTint="?attr/colorOnPrimary"
            android:foreground="@drawable/ic_baseline_delete_24"
            android:foregroundTint="@color/main_red"
            app:cornerRadius="20dp"
            android:layout_marginHorizontal="5dp"/>


    </LinearLayout>
</androidx.appcompat.widget.LinearLayoutCompat>